{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "resources",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@fonts/*": ["fonts/*"],
      "@images/*": ["images/*"],
      "@scripts/*": ["scripts/*"],
      "@styles/*": ["styles/*"]
    },
  },
  "include": ["bud.config.mjs", "resources"],
  "exclude": ["./public", "./node_modules"]
}
